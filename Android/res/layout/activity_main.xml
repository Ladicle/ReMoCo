<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical">

	<LinearLayout android:id="@+id/main_pad"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:orientation="vertical">

	</LinearLayout>

	<LinearLayout android:id="@+id/main_menu"
		android:layout_width="wrap_content" android:layout_height="match_parent"
		android:layout_gravity="right" android:background="#22ffffff"
		android:orientation="vertical" android:paddingBottom="10dp"
		android:paddingLeft="15dp" android:paddingRight="15dp"
		android:paddingTop="10dp" tools:ignore="UselessParent">

	</LinearLayout>

</FrameLayout>